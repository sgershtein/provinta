#------------------
# Описание страниц
#------------------

<pages>
	#
	# Обложка
	#
	<uri />
	pattern root.ptt
	title Главная страница
	description Интернет агенство "Провинта". Размещение интернет-рекламы на популярных сайтах Урала, медиапланирование, web-консалтинг. Звоните нам: (3432) 720-830.
	keywords Провинта, реклама, медиаплан, площадка, консалтинг, сайт, баннер, уральский, урал, web-консультирование, размещение, разработка, рекламная кампания, концепция

	# на этой странице можно включать счетчики для обложки
	root_counters 1

	# запускаемые модули (может быть несколько блоков)
	# внутри блока задаются параметры для данной страницы
        <module news>
        	# тип страницы (root|archive)
        	pagetype root
        	# макс. количество новостей для страницы
        	newscount 3
        	# макс. срок давности выводимых новостей
        	# (если для конкретных новостей не задано иное)
        	newsmaxage 90
        </module>
        
	</uri>

	#
	# интернет-реклама
	#
	<uri /adv/>
	redirect /adv/meaning/
	</uri>
	
	<uri /adv/meaning/>
	page adv/meaning.ptt
	title Смысл и цели интернет-рекламы
	description Смысл и цели интрернет-рекламы с точки зрения агенства Провинта
	keywords реклама, интернет-реклама, цель, смысл, назначение, средство, эффективность
        menuitem adv:meaning
        <path>
                <item>
                text интернет-реклама
                </item>
                <item>
                text смысл и цели рекламы
                href /adv/meaning/
                title Смысл и цели интернет-рекламы
                </item>
        </path>
	</uri>

	<uri /adv/methods/>
	page adv/methods.ptt
	title Методы и подходы в интернет-рекламе
	description Медоды и подходы в интернет-рекламе.  Виды рекламных носителей.
	keywords реклама, интернет-реклама, эффективность, средство, баннер, носитель, размещение, изготовление
        menuitem adv:methods
        <path>
                <item>
                text интернет-реклама
                href /adv/
                title Интернет-реклама
                </item>
                <item>
                text методы и подходы
                href /adv/methods/
                title Методы и подходы в интернет-рекламе
                </item>
        </path>
	</uri>

	<uri /adv/urals/>
	page adv/urals.ptt
	title Рекрама в уральском интернете
	description Специфика рекламы в уральском сегменте интернета.
	keywords реклама, интернет-реклама, Урал, специфика, Свердловская область, геогрфический таргетинг, региональный сайт
        menuitem adv:urals
        <path>
                <item>
                text интернет-реклама
                href /adv/
                title Интернет-реклама
                </item>
                <item>
                text реклама на Урале
                href /adv/urals/
                title Специфика размещения рекламы в уральском интернете
                </item>
        </path>
	</uri>

        #
        # О Провинте
        #
	<uri /provinta/>
	redirect /provinta/history/
	</uri>
	
	<uri /provinta/mission/>
	pattern page.ptt
	page provinta/mission.ptt
	title Миссия компании

	keywords миссия, наначение, провинциальное интернет-агентство, интернет-технологии, маркетинг, телекоммуникации
        menuitem provinta:mission
        <path>
                <item>
                text о Провинте
                href /provinta/
                title Все об интернет агентстве "Провинта"
                </item>
                <item>
                text миссия компании
                href /provinta/mission/
                title Миссия интернет агентства "Провинта"
                </item>
        </path>
	</uri>

	<uri /provinta/history/newsarchive/>
	pattern page.ptt
	page provinta/history/newsarchive.ptt
	title Архив новостей
	description Архив новостей - это еще один взгляд на историю компании.
	keywords история, новости, архив, кампания, портал, клиенты, развитие

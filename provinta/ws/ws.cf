#
# Конфигурационный файл описания структуры сайта
# используется парсером
#

#
# ВАЖНО:
#
#  - Ко всем ссылкам от корня сайта (поля href) автоматически
#    приписывается префикс парсера (config:uriprefix).  Чтобы задать
#    ссылку от корня вне парсера, нужно использовать двойной
#    слеш (//uri/path)
#

#----------------------
# Глобальные параметры
#----------------------
<config>

	# базовый каталог (относильно него задаются пути)
	basedir /web/convert/provinta/ws

	# URI-префикс парсера
	uriprefix /ws
	
	# основной каталог шаблонов (полный путь или относительно basedir)
	pttdir ptt

	# дополнительные каталоги шаблонов (можно несколько черезх пробел)
	pttextradirs

	# шаблон для вывода страницы по умолчанию (если не задан явно)
	pttdefault page.ptt

	# выводить (0) или не выводить (1) сообщения об ошибках в шаблонах
	pttnowarn 0

	# каталог подгружаемых модулей (полный путь или относительно basedir)
	modulesdir modules

</config>

#------------------------------------
# Подгружаемые модули и их параметры
#------------------------------------
<modules>

# модуль вывода новостей
<module news>
	# код модуля (относительно каталога модулей)
	code news.pm

	<config>
	# полный или относительно basedir путь к каталогу новостей
	newsdir data/news
	</config>
	
</module>
	
</modules>

